@page
@model WebApp.Pages.Productos.GridModel
@{
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Producto
        </div>
        <div class="card-body">
            <a class="btn btn-primary" asp-page="Edit"><i class='bx bxs-add-to-queue'></i></a>
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>IdProducto</th>
                                <th>Nombre Producto</th>
                                <th>Precio Producto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.IdProducto</td>
                                    <td>@item.NombreProducto</td>
                                    <td>@item.PrecioProducto</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdProducto"><box-icon type='solid' name='edit-alt'></box-icon></a>

                                        <button type="button" class="btn btn-danger" onclick="ProductoGrid.OnclickEliminar(@item.IdProducto)">
                                            <box-icon type='solid' name='trash'></box-icon>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


</div>

@section Scripts{


    <script defer src="~/App/Producto/Grid.js"></script>

}
